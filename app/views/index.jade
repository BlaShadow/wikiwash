doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="description" content="")
    meta(name="viewport" content="width=device-width")
    title WikiWash

    link(rel="stylesheet" type="text/css" href="/css/vendor.css")
    link(rel="stylesheet" type="text/css" href="/css/application.css")
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700' rel='stylesheet' type='text/css')

    script(src="/js/vendor.js" type="text/javascript")
    script(src="/js/application.js" type="text/javascript")
    script(src="/js/templatescache.js" type="text/javascript")

  body(ng-app='wikiwash')
    .wrapper
      .header WikiWash
      .content-left(ng-controller='RevisionsController')
        .revisions(ng-repeat='revision in revisions track by $index')

          .timestamp
            p
              {{revision.timestamp | date:'mediumDate'}}
            p.time
              {{revision.timestamp | date:'shortTime'}}
          .user_comment
            a(href="#" ng-click="getDiff(revision.revid)")
              p.username
                {{revision.user}}
            a(href="#" ng-click="getDiff(revision.revid)")
              p.comment(ng-if="revision.comment.length > 0")
                {{revision.comment}}
              p.comment(ng-if="revision.comment.length <= 0")
                |Comment was not entered.
          .data
            p.added
              |+{{revision.size}}
            p.removed
              |-{{revision.size}}
        .footer
            P
              |content

      .content-right(ng-controller='DiffController')
        .wikidiff(ng-bind-html="revisionDiffHtml")
