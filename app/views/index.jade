doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="description" content="")
    meta(name="viewport" content="width=device-width")
    title WikiWash

    link(rel="stylesheet" type="text/css" href="/css/vendor.css")
    link(rel="stylesheet" type="text/css" href="/css/application.css")
    link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700' rel='stylesheet' type='text/css')

    script(src="/js/vendor.js" type="text/javascript")
    script(src="/js/application.js" type="text/javascript")
    script(src="/js/templatescache.js" type="text/javascript")

  body(ng-app='wikiwash')
    .wrapper
      .header
        .logo
          p
            |WW  WIKIWASH
        a.export-session(href="#" ng-click="getDiff(revision.revid)")
            |Export Session
        .empty
        .search
          input.bar(type="text" ng-model='pageName')
          input.send(type='submit' value='submit' ng-click='submit()')
        .navigation
          p
            |Show:
          a.removed
            |Removed
          a.added
            |Added





      .content-left(ng-controller='RevisionsController')
        .collection(leftHeight ng-style="styleleft()")
          .revisions(ng-repeat='revision in revisions track by $index'
            ng-class="{ 'active-revision': $index == selectedIndex }"
              ng-click="itemClicked($index)")

            .timestamp
              p
                {{revision.timestamp | date:'mediumDate'}}
              p.time
                {{revision.timestamp | date:'shortTime'}}
            .user_comment
              a(href="#" ng-click="getDiff(revision.revid)")
                p.username
                  {{revision.user}}
              a(href="#" ng-click="getDiff(revision.revid)")
                p.comment(ng-if="revision.comment.length > 0")
                  {{revision.comment}}
                p.comment(ng-if="revision.comment.length <= 0")
                  |Comment was not entered.
            .data
              p.added
                |+{{revision.size}}
              p.removed
                |-{{revision.size}}
        .footer
          .top-stats
            P
              |500 edits by 16 people since Feb 22 2014
          .bottom-stats
            .edits-per-user
              p
                |Edits per user
              p.number
                |3.9
            .time-between-edits
              p
                |Time between edits
              p.number
                |0.9 Days

      .content-right(ng-controller='DiffController' rightHeight ng-style="styleright()")
        .wikidiff(ng-bind-html="revisionDiffHtml")
